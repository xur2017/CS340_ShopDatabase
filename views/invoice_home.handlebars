<h2>Invoice</h2>

<form id="addForm">
    orderId:
    <input type="number" name="orderId" id="orderIdInput"><br>
    amount:
    <input type="number" name="amount" id="amountInput"><br>
    <input type="submit" name="add" value = "Add" id="addButton">
</form>

<br>

<table id="showTable">
    <tr>
        <th>orderId</th>
        <th>amount</th>
    </tr>
    
    {{#if results}}
        {{#each results}}
            <tr>
                <td>{{this.orderId}}</td>
                <td>{{this.amount}}</td>
            </tr>
        {{/each}}
    {{/if}}
</table>

<script src="./invoice_script.js"></script>